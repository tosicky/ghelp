html
  head
    title=title
    link(href='/stylesheets/my.css',rel='stylesheet')
   
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    title
    meta(name='keywords', content='')
    meta(name='description', content='')
    link(href='http://fonts.googleapis.com/css?family=Varela', rel='stylesheet')
    link(href='/stylesheets/my.css',rel='stylesheet')
    link(href='/stylesheets/firstpage.css', rel='stylesheet', type='text/css', media='all')
    link(href='/stylesheets/firstpagefonts.css', rel='stylesheet', type='text/css', media='all')
    
    //if IE 6
      link(href='default_ie6.css', rel='stylesheet', type='text/css')
  body
    #wrapper
      #header-wrapper
        #header.container 
          //h2 &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp MENTOR REGISTRATION
           
          
        
          
          #logo
            h1
              img(src='images/logo2.png', alt='', width='70', height='70')

              
             
          #menu
            ul
              li
                a(href='/ghelp', accesskey='1', title='') Homepage

               
              li  
               if (user)
                a(href='/logout') Logout
             

             
   #banner
    .title
            h2 Mentor Registration
  
    div.container

      if errors
        each error in errors
          div.alert.alert-danger
            span #{error.error}
      if saved
        div.alert.alert-success
          span Registration Successfull! 
      form.login-form.form-horizontal(method='post')
       if(user)
        
        input(type="hidden", name="_csrf")

        
        div.form-group
          label.col-sm-4 MUN Stu. No.
          div.col-sm-8
            input.form-control(
              placeholder='Your MUN Stu No.',
              value="#{user.std_id}",
              required=true,
              name='munNo',
              type='number',
              style='width: 300px',
              readonly=true
              )
        div.form-group
          label.col-sm-4 First Name
          div.col-sm-8
            input.form-control(
              placeholder='Your first name',
              value="#{user.firstname}",
              readonly=true,
              required=true,
              name='firstName',
              type='text',
              
              style='width: 300px'
              )
        
        div.form-group
          label.col-sm-4 Last Name
          div.col-sm-8
            input.form-control(placeholder='Your last name',
              required=true,
              value="#{user.lastname}",
              readonly=true,
              name='lastName',
              type='text',
              style='width: 300px',
              )
        div.form-group
          label.col-sm-4 Major
          div.col-sm-8
            input.form-control(placeholder='e.g. Computer Science',
              required=true,
              value="#{user.program}",
              readonly=true,
              name='major',
              type='text',
              style='width: 300px')
           
        div.form-group
          label.col-sm-4 Email
          div.col-sm-8
            input.form-control(placeholder='example@example.com',
              required=true,
              value="#{user.username}",
              readonly=true,
              name='email',
              type='email',
              style='width: 300px'
              )      
        
        
        div.form-group
          label.col-sm-4 Cellphone 
          div.col-sm-8
            input.form-control(type='number', 
            value="#{user.mobile}",
              readonly=true,
              name='number',maxlength='10' pattern='[0-9]{10}', required=true, style='width: 300px', placeholder='Ex-7099999999')
          

              
        div.form-group
          label.col-sm-4 Sex
          div.col-sm-1
           input.form-control(placeholder='example@example.com',
              required=true,
              value="#{user.sex}",
              readonly=true,
              name='sex',
              type='text',
              style='width: 300px'
              ) 
               
        
            
         div.form-group
          label.col-sm-4 Preference
          div.col-sm-8
           textarea.form-control(rows="4", placeholder="Enter preferences that you may have!", style='width:300px', name='preference', required=true)

         dive.form-group
          label.col-sm-4
          div.col-sm-1
            input.form-control(type="hidden", name="assigned")

         dive.form-group
          label.col-sm-4
          div.col-sm-1
            input.form-control(type="number", name="mentee_id", value='')
            
            
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Submit
            
        